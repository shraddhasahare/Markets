<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10dp"
    android:paddingTop="@dimen/dimen_50dp"
    android:paddingBottom="@dimen/dimen_50dp"
    android:background="@color/widget_background_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageEmptySearch"
        android:layout_width="59dp"
        android:layout_height="62dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_no_matching_results_found" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmptySearchResultFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_search"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageEmptySearch" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmptySearchResultSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:text="@string/empty_search_second"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmptySearchResultFirst" />
</androidx.constraintlayout.widget.ConstraintLayout>